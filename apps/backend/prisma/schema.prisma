generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id              String            @id @default(cuid())
  name            String            @db.VarChar(256)
  isDeleted       Boolean           @default(false) @map("is_deleted")
  createdAt       DateTime          @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt       DateTime          @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)
  ReadApprovedUrl ReadApprovedUrl[]

  @@map("companies")
}

model BaseUrl {
  id              String            @id @default(cuid())
  url             String            @db.VarChar(256)
  isDeleted       Boolean           @default(false) @map("is_deleted")
  createdAt       DateTime          @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt       DateTime          @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)
  ReadApprovedUrl ReadApprovedUrl[]

  @@map("base_urls")
}

model ReadApprovedUrl {
  id        String   @id @default(cuid())
  isViewed  Boolean  @default(false) @map("is_viewed")
  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)

  baseUrlId String  @map("base_url_id")
  baseUrl   BaseUrl @relation(fields: [baseUrlId], references: [id])

  companyId String  @map("company_id")
  company   Company @relation(fields: [companyId], references: [id])

  @@map("read_approved_urls")
}
