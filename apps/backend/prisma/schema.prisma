generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                  String               @id @default(cuid())
  name                String               @unique @db.VarChar(256)
  createdAt           DateTime             @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt           DateTime             @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)
  deletedAt           DateTime?            @map("deleted_at") @db.Timestamp(0)
  accessJudgementUrls AccessJudgementUrl[]

  @@map("companies")
}

model BaseUrl {
  id                 String               @id @default(cuid())
  title              String               @db.VarChar(256)
  url                String               @unique @map("url") @db.VarChar(256)
  deletedAt          DateTime?            @map("deleted_at") @db.Timestamp(0)
  createdAt          DateTime             @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt          DateTime             @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)
  AccessJudgementUrl AccessJudgementUrl[]

  @@map("base_urls")
}

model AccessJudgementUrl {
  id        String    @id @default(cuid())
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(0)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)

  baseUrlId String  @map("base_url_id")
  baseUrl   BaseUrl @relation(fields: [baseUrlId], references: [id])

  companyId             String                  @map("company_id")
  company               Company                 @relation(fields: [companyId], references: [id])
  AccessJudgementUrlLog AccessJudgementUrlLog[]

  @@unique([baseUrlId, companyId])
  @@map("access_judgement_urls")
}

model AccessJudgementUrlLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(0)

  accessJudgementUrl   AccessJudgementUrl @relation(fields: [accessJudgementUrlId], references: [id])
  accessJudgementUrlId String             @map("access_judgement_url_id")

  @@map("access_judgement_url_logs")
}
